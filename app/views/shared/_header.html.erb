<header class = "top-header">
  <div class = "left-lists">
   <h2><%= link_to "イベント", events_path, class: "event l" %></h2>
  </div>
  <div class = "middle-lists">
   <h1><%= link_to "IT'S A SMALL WORLD", root_path, class: "title" %></h1>
  </div>
  
  <div class = "right-lists">
  <% if user_signed_in? %>
    <h2><%= link_to current_user.nickname, "#", class: "user-nickname l" %></h2>
    <h2><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "logout l" %></h2>
  <% else %>
    <h2><%= link_to "ログイン", new_user_session_path, class: "login l" %></h2>
    <h2><%= link_to "新規登録", new_user_registration_path, class: "signup l" %></h2>
  </div>
  <% end %>
</header>