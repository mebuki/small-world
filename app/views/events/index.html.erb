<%= render "shared/header" %>

  <div class="events-main">
    <p><%=link_to "新規イベント", new_event_path, class:"new-event" %></p>
    <p><%=link_to "検索", events_search_path, class:"search-event" %></p>
    <div class="events">
      <div class="events-l">
        <%=link_to language_events_path do %>
          <%=image_tag "language.png", size:"250x200", class: "event-btn"%>
        <% end %>
        <div class="event-category-name">言語交換 / Language Exchange
        </div>
      </div>
      <div class="events-c">
        <%=link_to culture_events_path do %>
          <%=image_tag "culture.jpg", size:"250x200", class: "event-btn"%>
        <% end %>
        <div class="event-category-name">異文化 / a different culture
        </div>
      </div>
      <div class="events-h">
        <%=link_to hangout_events_path do %>
          <%=image_tag "hangout.jpg", size:"250x200", class: "event-btn"%>
        <% end %>
        <div class="event-category-name">おでかけ / Hang out
        </div>
      </div>
      <div class="events-o">
        <%=link_to others_events_path do %>
          <%=image_tag "japan.jpg", size:"250x200", class: "event-btn"%>
        <% end %>
        <div class="event-category-name">その他 / Others
        </div>
      </div>
    </div>
  </div>

<%= render "shared/footer"%>