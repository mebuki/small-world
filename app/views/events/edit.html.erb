<div class= "event-new">

  <div class= "new-sidebar">
    <%= render "shared/sidebar" %>
  </div>

    <%= form_with model: @event, class: "event-information", method: :patch, local: true do |f| %>
      <div class= "new-event">
        <div class= "new-event-title">what do you wanna do ?
        </div>
        <div class= "event-a">
          <%= f.collection_select(:purpose_id, Purpose.all, :id, :name, {}, {class: "input-id", id: "purpose"}) %>
        </div>
        <div class= "event-a">
          <%= f.text_area :name, placeholder:"name", class: "input", id: "name" %>
        </div>
        <div class= "event-a">
          <%= f.collection_select(:month_id, Month.all, :id, :name, {}, {class: "input-ids", id: "month"}) %>
          <%= f.collection_select(:day_id, Day.all, :id, :name, {}, {class: "input-ids-a", id: "day"}) %>
          <%= f.collection_select(:year_id, Year.all, :id, :name, {}, {class: "input-ids", id: "year"}) %>
          <%= f.collection_select(:day_of_week_id, DayOfWeek.all, :id, :name, {}, {class: "input-ids-a", id: "day-of-week"}) %>
          <%= f.collection_select(:event_time_id, EventTime.all, :id, :name, {}, {class: "input-ids", id: "event-time"}) %>
        </div>
        <div class= "event-a">
          <%= f.text_area :place, placeholder:"place", class: "input", id: "place" %>
        </div>
        <div class= "event-a">
          <%= f.text_area :info, placeholder:"info", class: "input-info", id: "info" %>
        </div>
        <div class= "event-a">
          <%= f.submit "Do it!!" ,class:"event-btn" %>
        </div>
      </div>
    <% end %>

</div>