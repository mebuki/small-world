<%= render "shared/header" %>

<div class="event-category">
  <div class="titles">言語交換 / Language Exchange
  </div>
  <% @events.where("purpose_id = 1").each do |event| %>
  <ul class="events-list">
    <li class="lists">
    <div class="list-name">
      E v e n t : <%=link_to event.name, "#", method: :get%>
    </div>
    <div class="list-time">
      <%=event.month.name%> <%=event.day.name%>th  <%=event.year.name%>
    </div>
    </li>
  </ul>
  <% end %>
</div>

<%= render "shared/footer"%>