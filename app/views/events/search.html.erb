<div class= "event-search">
  
  <%= render "shared/sidebar" %>

  <div class= "search-img">
    <div class= "search">
      <div class= "search-events">
        <%= search_form_for @e, url: events_search_path do |f| %>
          <div class= "search-category">
            <%= f.collection_select :purpose_id_eq, Purpose.all, :id, :name, include_blank: 'Category' %>
          </div>
          <div class= "search-time">
            <%= f.date_field :event_date_eq %>
            <%= f.time_field :event_time_eq %>
          </div>
          <div class= "search-botton">
            <%= f.submit "S E A R C H", class: "search-btn" %>
          </div>
        <% end %>
      </div>
      
      <div class= "search-results">
        <% if @results.length !=0 %>
          <% @results.each do |result| %>
            <ul class= "results">
              <%= link_to event_path(result.id) do %>
              <li>
                <div class= "results-list">
                  <%= result.name %>
                  <br><br>
                  <%= result.event_date %>
                  <%= result.event_time %>
                <div>
              </li>
              <% end %>
            </ul>
          <% end %>
        <% else %>
          <div class= "results-no-list">
            <p>there aren't EVENTS</p>
            <p>Do something!!</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class= "search-hide">
