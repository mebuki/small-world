<% if user_signed_in? && @event.user_id != current_user.id %>
  <div class="like-link" id="like-link-<%= @event.id %>">
    <% if current_user.likes.find_by(event_id: @event.id) %>
      <%= link_to event_likes_path(@event.id), method: :delete, remote: true do %>
        <div class = "iine__button">❤️ <%= @event.likes.count %> people</div>
      <% end %>
    <% else %>
      <%= link_to event_likes_path(@event.id), method: :post, remote: true do %>
        <div class = "iine__button">♡️ <%= @event.likes.count %> people</div>
      <% end %>
    <% end %>
  </div>
<% else %>
  <div class="like-link">
    <%= @event.likes.count %> people
  </div>
<% end %>