<%= render "shared/header"%>

<%= form_with model: @user, url: user_registration_path, class: "registration", local: true do |f| %>
  <div class="form-group">
    <div class= "form-text-wrap">
      <label class="form-text">nickname</label>
    </div>
  <%= f.text_area :nickname, class:"input-default", id:"nickname", placehilder:"Mike or Yuka", maxlength:"20" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">mail</label>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC or Email", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">password</label>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"over 6 letters" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">password(confirm)</label>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password-confirmation", placeholder:"over 6 letters" %>
  </div>
  <div class="form-group">
    <div class= "form-text-wrap">
      <label class="form-text">where are you from?</label>
    </div>
    <%= f.text_area :country_id, class:"input-default", id:"country", placehilder:"country" %>
  </div>
  <div class="form-group">
    <div class= "form-text-wrap">
      <label class="form-text">where do you live?</label>
    </div>
    <%= f.text_area :prefecture_id, class:"input-default", id:"prefecture", placehilder:"prefecture" %>
  </div>
  <div class="register-btn">
    <%=f.submit "新規登録", class:"register-bottom"%>
  </div>
<% end %>

<%=render "shared/footer"%>