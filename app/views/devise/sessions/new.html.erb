<%= render "shared/header"%>

<%= form_with model:@user, url: user_session_path, class:"registration", local: true do |f| %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Email</label>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC or Email", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">password</label>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
  </div>
  <div class='login-btn'>
    <%= f.submit "ログイン" ,class:"register-bottom" %>
  </div>
<% end %>

<%= render "shared/footer"%>