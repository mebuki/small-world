<div class= "signin">
  <div class= "signin-info">
    <%= form_with model: @user, url: user_session_path, class:"session", local: true do |f| %>
      <div class="form-group-2">
        <%= f.email_field :email, class:"input-default", id:"email", placeholder:"Email", autofocus: true %>
      </div>
      <div class="form-group-2">
        <%= f.password_field :password, class:"input-default", id:"password", placeholder:"password" %>
      </div>
      <div class='register-btn'>
        <%= f.submit "welcome back" ,class:"register-botton" %>
      </div>
    <% end %>
  </div>
  <%= link_to "Back", root_path, class:"back-to-top-2" %>
</div>