<div class= "signup">
  <h3 class= "registration-title">Who am <%= current_user.nickname %>?</h3>
  <div class= "signup-info">
    <%= form_with model: current_user, class: "registration", method: :patch, local: true do |f| %>
      <div class="form-group">
        <%= f.text_field :nickname, class:"input-default", id:"nickname", placeholder:"nickname", maxlength:"20" %>
      </div>
      <div class="form-group">
        <%= f.email_field :email, class:"input-default", id:"email", placeholder:"Email", autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class:"input-default", id:"password", placeholder:"password" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class:"input-default", id:"password-confirmation", placeholder:"password for confirmation" %>
      </div>
      <div class="form-group">
        <%= f.collection_select(:country_id, Country.all, :id, :name, {}, {class:"input-default-hash", id:"country"}) %>
      </div>
      <div class="form-group">
        <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"input-default-hash", id:"prefecture"}) %>
      </div>
      <div class="register-btn">
        <%= f.submit "Go to Flight", class:"register-botton" %>
      </div>
    <% end %>
  </div>
  <%= link_to "Back", user_path, class:"back-to-top" %>
</div>